<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MovieExplorer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MovieExplorer.Views"
    Title="MovieExplorer"
    NavBarIsVisible="False"
    TabBarBackgroundColor="{StaticResource ElementsLight}"
    TabBarForegroundColor="{StaticResource White}"
    TabBarTitleColor="{StaticResource White}"
    TabBarUnselectedColor="{StaticResource BackgroundColorLight}"
    Padding="0, 20">

    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home.png"
            ContentTemplate="{DataTemplate local:HomePage}"
            Route="HomePage" />

        <ShellContent 
            Title="Favorites"
            Icon="heart.png"
            ContentTemplate="{DataTemplate local:FavoritesPage}"
            Route="FavoritesPage"/>
    </TabBar>
</Shell>
