<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:templates="clr-namespace:MovieExplorer.Views.Templates"
             xmlns:viewModels="clr-namespace:MovieExplorer.ViewModels"
             x:Class="MovieExplorer.Views.HomePage" x:DataType="viewModels:MovieViewModel">
    <Grid RowDefinitions="*,2*,12*">
        
        <!-- TODO: logo -->
        <Image Source="logo_light.png"/>
        
        <!-- TODO: search -->
        <templates:SearchBarTemplate Grid.Row="1"/>
        
        <!-- the listings -->
        <CollectionView ItemsSource="{Binding Movies}" Grid.Row="2">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <templates:MovieListingTemplate/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>