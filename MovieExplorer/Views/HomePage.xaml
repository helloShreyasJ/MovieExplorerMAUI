<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:templates="clr-namespace:MovieExplorer.Views.Templates"
             xmlns:viewModels="clr-namespace:MovieExplorer.ViewModels"
             x:Class="MovieExplorer.Views.HomePage" x:DataType="viewModels:MovieViewModel"
             BackgroundColor="{DynamicResource AppBackgroundColor}">
    
    <Grid RowDefinitions="*,2.5*,12*">
        <!-- logo -->
        <Image Source="{DynamicResource AppLogo}"></Image>
        
        <!-- searchbar -->
        <templates:SearchBarTemplate
            Grid.Row="1"/>
        
        <!-- buttons -->
        <HorizontalStackLayout Grid.Row="2"
                    VerticalOptions="End"
                    HorizontalOptions="End"
                    ZIndex="10">
            <Button x:Name="ReloadButton"
                    ImageSource="reload.png"
                    BackgroundColor="{StaticResource ElementsLight}"
                    CornerRadius="10"
                    HeightRequest="{OnPlatform Android=50, Default=70}"
                    WidthRequest="{OnPlatform Android=50, Default=70}"
                    Padding="10"
                    Margin="15, 0, 15, 15"
                    IsEnabled="{Binding HasLoaded}"
                    Clicked="ReloadButton_OnClicked"/>
            <Button x:Name="SortButton"
                    ImageSource="sort.png"
                    BackgroundColor="{StaticResource ElementsLight}"
                    CornerRadius="10"
                    HeightRequest="{OnPlatform Android=50, Default=70}"
                    WidthRequest="{OnPlatform Android=50, Default=70}"
                    Padding="10"
                    Margin="15, 0, 15, 15"
                    IsEnabled="{Binding HasLoaded}"
                    Clicked="SortButton_OnClicked"/>
            <Button x:Name="SettingsButton"
                    ImageSource="settings.png"
                    BackgroundColor="{StaticResource SettingsIcon}"
                    CornerRadius="10"
                    HeightRequest="{OnPlatform Android=50, Default=70}"
                    WidthRequest="{OnPlatform Android=50, Default=70}"
                    Padding="10"
                    Margin="15, 0, 15, 15"
                    Clicked="SettingsButton_OnClicked"/>
        </HorizontalStackLayout>
        
        <!-- listings -->
        <CollectionView ItemsSource="{Binding Movies}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedMovie}"
                        SelectionChanged="CollectionView_SelectionChanged"
                        Grid.Row="2">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <templates:MovieListingTemplate/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
        <!-- activity indicator -->
        <Grid Grid.Row="2"
              BackgroundColor="{DynamicResource ActivityIndicatorBg}"
              IsVisible="{Binding IsLoading}">
            <Label
                Text="Fetching Movie Data from TMDB Servers..."
                HorizontalOptions="Center"
                Margin="20,20,0,0"
                FontSize="24"
                TextColor="{DynamicResource AppTextColor}"/>
            <ProgressBar
                Progress="{Binding LoadProgress}"
                IsVisible="{Binding IsLoading}"
                WidthRequest="300"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
        </Grid>
    </Grid>
</ContentPage>