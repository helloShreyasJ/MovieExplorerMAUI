<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:MovieExplorer.Views"
             x:Class="MovieExplorer.Views.MovieDetailPage"
             BackgroundColor="{DynamicResource AppBackgroundColor}" x:DataType="views:MovieDetailPage">
<ScrollView>
     <VerticalStackLayout HorizontalOptions="Center"
                          VerticalOptions="Start"
                          Margin="0,45,0,0"
                          Padding="20">
          <!-- title -->
          <Label x:Name="TitleLabel"
               FontSize="48"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="{DynamicResource AppTextColor}"/>

          <!-- poster image -->
         <Grid>
              <!-- placeholder image is always there. real image overlays once loaded -->
              <Image Source="placeholder.png"
                     HeightRequest="348"
                     WidthRequest="232"
                     Aspect="Fill" />
              <Image x:Name="Poster"
                     HorizontalOptions="Center"
                     HeightRequest="348"
                     WidthRequest="232"
                     Aspect="AspectFill"
                     Margin="0,10,0,10"
                     IsVisible="{Binding Movie.posterUrl}">
                   <Image.Source>
                        <UriImageSource
                             Uri="{Binding Movie.posterUrl}"
                             CachingEnabled="True"
                             CacheValidity="30.00:00:00"/>
                   </Image.Source>
              </Image>
         </Grid>
          
          <!-- VerticalOptions="{OnPlatform Android=End, Default=Center}" -->
          <HorizontalStackLayout Margin="0,10,22,0"
                                 HorizontalOptions="End">
               <Button x:Name="BackButton"
                       BackgroundColor="{StaticResource ElementsLight}"
                       CornerRadius="15"
                       Padding="10"
                       WidthRequest="{OnPlatform Android=50, Default=66}"
                       HeightRequest="{OnPlatform Android=50, Default=66}"
                       ImageSource="back_button.png"
                       Clicked="BackButton_OnClicked"/>
               <Button x:Name="AddToFavorites"
                       BackgroundColor="{StaticResource ElementsLight}"
                       Margin="12,0,0,0"
                       CornerRadius="15"
                       Padding="10"
                       WidthRequest="{OnPlatform Android=50, Default=66}"
                       HeightRequest="{OnPlatform Android=50, Default=66}"
                       Clicked="AddToFavorites_OnClicked"
                       ImageSource="heart.png"/>
          </HorizontalStackLayout>
          
          <!-- genre -->
          <Label x:Name="GenreLabel"
          Margin="0,25,0,0"
          FontSize="32"
          TextColor="{DynamicResource AppTextColor}"/>
          
          <!-- rating -->
          <Label x:Name="RatingLabel"
          Margin="0,12,0,0"
          FontSize="32"
          TextColor="{DynamicResource AppTextColor}"/>

          <!-- director -->
          <Label x:Name="DirectorLabel"
          Margin="0,12,0,0"
          FontSize="32"
          TextColor="{DynamicResource AppTextColor}"/>
          
          <!-- original language -->
          <Label x:Name="OriginalLangLabel"
          Margin="0,12,0,0"
          FontSize="32"
          TextColor="{DynamicResource AppTextColor}"/>
          
          <!-- overview -->
          <Label x:Name="OverviewLabel"
          Margin="0,12,0,0"
          FontSize="32"
          TextColor="{DynamicResource AppTextColor}"/>
     </VerticalStackLayout>
</ScrollView>
</ContentPage>