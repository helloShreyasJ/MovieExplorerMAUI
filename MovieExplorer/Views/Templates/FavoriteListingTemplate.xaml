<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MovieExplorer.Models"
             x:Class="MovieExplorer.Views.Templates.FavoriteListingTemplate"
             x:DataType="models:Movie">

    <Border
        Margin="12"
        Padding="24"
        StrokeThickness="1"
        StrokeShape="RoundRectangle 10"
        BackgroundColor="{StaticResource BackgroundColorLight}">
        <Grid
            ColumnDefinitions="*,Auto"
            RowDefinitions="Auto,Auto,*">

            <!-- title -->
            <Label
                Grid.Row="0"
                Grid.Column="0"
                Text="{Binding title}"
                FontSize="24"
                FontAttributes="Bold"
                TextColor="Black"
                LineBreakMode="WordWrap" />

            <VerticalStackLayout
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,24,0,0"
                Spacing="8">
                
                <!-- genre -->
                <HorizontalStackLayout>
                    <Label
                        Text="{Binding GenreText}"
                        FontSize="16"
                        TextColor="Black"/>

                    <Label
                        Text="{Binding emoji}"
                        FontSize="16"
                        Margin="8,0,0,0"/>
                </HorizontalStackLayout>
                <!-- director -->
                <Label
                    Text="{Binding director, StringFormat='Director: {0}'}"
                    FontSize="16"
                    TextColor="Black"/>
            </VerticalStackLayout>

            <!-- rating -->
            <Border
                Grid.Row="2"
                Grid.Column="1"
                HeightRequest="85"
                WidthRequest="85"
                StrokeShape="RoundRectangle 60"
                BackgroundColor="{StaticResource ElementsLight}"
                VerticalOptions="End"
                HorizontalOptions="End">

                <Label
                    Text="{Binding rating}"
                    FontSize="22"
                    FontAttributes="Bold"
                    TextColor="Black"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
            </Border>
        </Grid>
    </Border>
</ContentView>