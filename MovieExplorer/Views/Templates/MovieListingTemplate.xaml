<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MovieExplorer.Models"
             x:Class="MovieExplorer.Views.Templates.MovieListingTemplate"
             x:DataType="models:Movie">
    <Border
        Margin="12"
        Padding="20"
        StrokeShape="RoundRectangle 10"
        StrokeThickness="1"
        BackgroundColor="{StaticResource BackgroundColorLight}">
        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">

            
            <StackLayout Grid.Column="0" Grid.Row="0">
                <!-- title -->
                <Label 
                    Text="{Binding title}" 
                    FontSize="28"
                    TextColor="Black"
                    FontAttributes="Bold"/>
                <!-- year -->
                <Label 
                    Text="{Binding year}" 
                    FontSize="20"
                    TextColor="Black"
                    Margin="0,10,0,0" />
            </StackLayout>

            <!-- rating -->
            <Border
                Grid.Column="1"
                Grid.Row="0"
                HeightRequest="110"
                WidthRequest="110"
                StrokeShape="RoundRectangle 60"
                BackgroundColor="{StaticResource ElementsLight}"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Padding="0">

                <Label 
                    Text="{Binding rating}"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    FontSize="32"
                    TextColor="Black"
                    FontAttributes="Bold"/>
            </Border>

            <!-- genre -->
            <HorizontalStackLayout
                Grid.Column="0"
                Grid.Row="1"
                Margin="0,10,0,0">
                <Label
                    Text="{Binding GenreText}"
                    FontSize="20"
                    TextColor="Black"/>
                
                <Label Text="{Binding emoji}"
                       FontSize="20"
                       TextColor="Black"
                       Margin="7,0,0,0"></Label>
            </HorizontalStackLayout>
            
            <!-- director -->
            <Label 
                Grid.Column="0"
                Grid.Row="2"
                Text="{Binding director, StringFormat='Director: {0}'}"
                TextColor="Black"
                FontSize="20" />
        </Grid>
    </Border>
</ContentView>